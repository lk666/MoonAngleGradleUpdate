<resources>>

    <style name="AppTheme.NoActionBar">

    </style>

    <style name="TranslucentTheme" parent="android:Theme.Holo">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        - <!-- Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色
  -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:actionBarSize">50dip</item>
    </style>

    <style name="TranslucentTheme2" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        - <!-- Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色
  -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:actionBarSize">50dip</item>
    </style>

    <style name="Anim_style2" parent="android:Theme.Holo.Light.NoActionBar.TranslucentDecor">
        <item name="android:windowAnimationStyle">@style/AnimFade</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        - <!-- Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色
  -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:actionBarSize">50dip</item>
    </style>

</resources>
