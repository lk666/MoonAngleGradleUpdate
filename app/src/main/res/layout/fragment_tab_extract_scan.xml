<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/num_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/txt_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_shop"
        android:background="@color/btn_blue"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="14sp"
        android:visibility="invisible"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_location"
        android:background="@color/btn_blue"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="14sp"
        android:visibility="invisible"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/txt_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_person"
        android:background="@color/btn_blue"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="14sp"
        android:visibility="invisible"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <cn.com.bluemoon.lib.view.ClearEditText
            android:id="@+id/et_number"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittext_border_shape_blue"
            android:gravity="center"
            android:hint="@string/extract_scan_code_input_number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/text_black_light"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@null"
            android:textSize="19sp" />

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_red_shape2"
            android:text="@string/btn_ok_space"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <cn.com.bluemoon.delivery.ui.IconButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btn_scan"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:background="@drawable/btn_blue_shape2"
        android:drawableLeft="@mipmap/ic_scan2"
        android:text="@string/extract_scan_code_btn"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:iconPadding="10dp" />

</LinearLayout>