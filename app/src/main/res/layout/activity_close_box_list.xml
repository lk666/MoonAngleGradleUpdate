<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg"
    android:orientation="vertical">
    <!--todo lk ç­‰UI-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="@string/close_box_tag_count"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_15" />

        <Button
            android:id="@+id/btn_print_tag"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_border_blue_shape4"
            android:gravity="center"
            android:text="@string/close_box_tag_print_tag"
            android:textColor="@color/text_blue_light"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/view_bg"
        android:cacheColorHint="@color/transparent"
        android:divider="@drawable/div_left_padding_12"
        android:dividerHeight="0.5dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="@drawable/view_bg" />

    <Button
        android:id="@+id/btn_scan"
        style="@style/btn_red4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/close_box_tag_scan_tag"
        android:visibility="gone" />
</LinearLayout>