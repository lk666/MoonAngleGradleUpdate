<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_collect_code"
            style="@style/txt_title_13"
            android:layout_width="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tv_count"
            style="@style/txt_title_11"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"/>
    </LinearLayout>

    <View style="@style/line_solid_padding_left_style"/>

    <cn.com.bluemoon.delivery.ui.NoScrollListView
        android:id="@+id/lv_order_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/div_left_padding_16"
        android:dividerHeight="@dimen/div_height"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"/>

    <View style="@style/line_solid_padding_left_style"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_brcode"
            style="@style/txt_title_11"
            android:layout_width="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tv_urgent"
            style="@style/txt_title_13"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:text="@string/with_order_collect_is_urgent"
            android:textColor="@color/btn_red"/>
    </LinearLayout>


</LinearLayout>