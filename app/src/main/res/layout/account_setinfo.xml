<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_f2"
    android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lin_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/re_clearCache"
                style="@style/account_set_relative_style" >

                <TextView
                    style="@style/account_set_txt_style"
                    android:text="@string/user_clear_cache" />

                <ImageView
                    android:id="@+id/img_right1"
                    style="@style/account_set_img_style" />

                <TextView
                    android:id="@+id/txt_cache"
                    style="@style/account_set_content_style"
                    android:layout_toLeftOf="@id/img_right1" />
            </RelativeLayout>
            <View style="@style/line_solid_deep_style"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/re_check"
                style="@style/account_set_relative_style" >

                <TextView
                    style="@style/account_set_txt_style"
                    android:text="@string/user_check_version" />

                <ImageView
                    android:id="@+id/img_right2"
                    style="@style/account_set_img_style" />

                <TextView
                    android:id="@+id/txt_check"
                    style="@style/account_set_content_style"
                    android:layout_toLeftOf="@id/img_right2" />
            </RelativeLayout>
            <View style="@style/line_solid_deep_style"/>
        </LinearLayout>

</LinearLayout>