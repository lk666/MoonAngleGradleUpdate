<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/border_white_shape_10"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_code_bar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_bluemoon_logo" />

        <TextView
            android:id="@+id/tv_tag_code"
            style="@style/txt_content_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_code_bar"
            android:layout_marginTop="8dp"
            android:background="@color/page_bg_f2"
            />


        <TextView
            android:id="@+id/tv_order_username"
            style="@style/txt_content_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tag_code"
            android:layout_marginTop="8dp"
            android:background="@color/page_bg_f2"
            android:text="@string/pack_back_box_user" />

        <TextView
            android:id="@+id/tv_order_userphone"
            style="@style/txt_content_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_username"
            android:layout_marginTop="8dp"
            android:background="@color/page_bg_f2"
            android:text="@string/pack_back_order_phone" />

        <TextView
            android:id="@+id/tv_address_title"
            style="@style/txt_content_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_userphone"
            android:layout_marginTop="8dp"
            android:background="@color/page_bg_f2"
            android:text="@string/pack_back_box_address" />

        <TextView
            android:id="@+id/tv_main_address"
            style="@style/txt_content_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_title"
            android:background="@color/page_bg_f2" />

        <TextView
            android:id="@+id/tv_detail_address"
            style="@style/txt_content_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_main_address"
            android:background="@color/page_bg_f2" />



        <TextView
            android:id="@+id/tv_back_order_num"
            style="@style/txt_content_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_detail_address"
            android:layout_marginTop="8dp"
            android:background="@color/page_bg_f2"
            android:text="@string/pack_back_order_clothes_num" />

        <TextView
            android:id="@+id/tv_main_order_num"
            style="@style/txt_content_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="75dp"
            android:layout_below="@+id/tv_back_order_num"
            android:background="@color/page_bg_f2"
            android:text="@string/pack_back_order_clothes_num2" />

        <TextView
            android:id="@+id/tv_clothes_resource"
            style="@style/txt_content_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_main_order_num"
            android:layout_marginTop="8dp"
            android:background="@color/page_bg_f2"
            android:text="@string/pack_back_order_clothes_resource" />
    </RelativeLayout>

</RelativeLayout>