<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_select_sign"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/page_bg_f2"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/text_grep"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                android:text="选择签到课程"
                android:textColor="@color/text_grep"
                android:textSize="12dp"/>
            <cn.com.bluemoon.delivery.ui.common.BMRadioListView
                android:id="@+id/view_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/btn_sign"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/text_red"
        android:gravity="center"
        android:text="签 到"
        android:textColor="@color/white"
        android:textSize="20dp"
    />

</LinearLayout>
