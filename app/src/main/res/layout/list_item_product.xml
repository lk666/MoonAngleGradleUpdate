<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:d="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:paddingTop="15dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_border_grep"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@mipmap/loading_img_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/linepaddingtxt"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_content"
                 android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="8dp"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_15" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/linepaddingtxt5"
                    android:gravity="right"
                     >

                    <TextView
                        android:id="@+id/txt_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grep"
                        android:layout_marginRight="25dp"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/txt_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grep"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:visibility="gone">
        <cn.com.bluemoon.delivery.ui.ArrowTextView
            android:id="@+id/arrowText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"
            d:arrowWidth="15dp"
            d:arrowInWidth="70dp"
            android:textColor="@color/text_grep"
            android:textSize="12sp"
            android:text="@string/order_package_detail"
            d:arrowBg="@color/page_bg_f8"/>
        <cn.com.bluemoon.delivery.ui.NoScrollListView
            android:id="@+id/listview_package_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/page_bg_f8"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:layerType="software"
            android:scrollbars="none" />

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_soild_bg"/>

</LinearLayout>