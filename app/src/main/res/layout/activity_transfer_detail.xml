<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/page_bg_f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transfer_detail_top_bg"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_transfer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txt_transfer_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:layout_marginTop="17.5dp"
            android:layout_marginBottom="17.5dp"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/txt_transfer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/bank_refuse_reason"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/txt_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_black_light"/>
        </LinearLayout>
        <include layout="@layout/line_solid_view_d7"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/transaction_time"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_black_light"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:layout_marginLeft="10dp"
              android:background="@color/line_soild_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transaction_code"
                android:textSize="15sp"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/txt_transaction_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/text_black_light"/>
        </LinearLayout>
        <include layout="@layout/line_solid_view_d7"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_transfer_voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/voucher_money"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/txt_voucher_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_black_light"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:layout_marginLeft="10dp"
              android:background="@color/line_soild_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/voucher_submit_time"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/txt_voucher_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_black_light"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:layout_marginLeft="10dp"
              android:background="@color/line_soild_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/voucher_photo"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/text_black"/>
            <ImageView
                android:id="@+id/img_voucher"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <include layout="@layout/line_solid_view_d7"/>
    </LinearLayout>
</LinearLayout>