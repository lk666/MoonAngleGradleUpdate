<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="@string/order_cancle_reason_select"
        android:textColor="@color/text_grep"
        android:textSize="12sp"/>
    <ListView
        android:id="@+id/list_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="@string/order_cancle_tips"
        android:textColor="@color/text_red"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/order_cancle_tips_1"
        android:textColor="@color/text_red"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/order_cancle_tips_2"
        android:textColor="@color/text_red"
        android:textSize="12sp"/>
    
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="14dp"
        android:text="@string/btn_ok2_with_space"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_red_shape4"/>

</LinearLayout>