<?xml version="1.0" encoding="utf-8"?>
<cn.com.bluemoon.delivery.ui.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_menu_item"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_menu_item"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:textColor="@color/text_black_light"
            android:textSize="13sp"
            android:visibility="visible" />
    </RelativeLayout>

    <cn.com.bluemoon.lib.view.RedpointTextView
        android:id="@+id/txt_dispatch_count"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@color/btn_red"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:visibility="gone" />
</cn.com.bluemoon.delivery.ui.SquareLayout>