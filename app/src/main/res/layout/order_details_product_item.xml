<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fefefe"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_box_rule_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:text="5"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_box_rule_num"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:text="@string/text_deliver_box_rule"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/txt_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:text="10346564"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/txt_order_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_order_number"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="机洗机器及其机器"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_title_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txt_order_number"
                android:singleLine="true"
                android:textColor="@color/text_black_light"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/txt_boxes_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txt_order_number"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:text="140箱（200支）"
                android:textColor="@color/text_black_light"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_none_diff_num"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txt_order_number"
                android:singleLine="true"
                android:text="差异："
                android:textColor="@color/text_black_light"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txt_order_number"
                android:singleLine="true"
                android:text="0支"
                android:textColor="@color/text_black_light"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_diff_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:visibility="gone"
        android:background="@color/page_bg_f2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_commonName_diff_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:text="@string/text_deliver_diff_nums"
            android:textColor="@color/text_grep"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/txt_diff_nums_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txt_commonName_diff_nums"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/text_grep"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/iv_fh_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_right"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_diff_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxEms="15"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="@string/text_diff_reason"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <View
        android:id="@+id/line_dotted_bottom"
        style="@style/line_dotted_style"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone" />
    <View
        android:id="@+id/line_solid_deep_bottom"
        style="@style/line_solid_deep_style"
        android:visibility="gone"/>

</LinearLayout>
