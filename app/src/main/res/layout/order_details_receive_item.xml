<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_box_rule_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_box_rule_num"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:text="@string/text_deliver_box_rule"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/txt_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/txt_order_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_order_number"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_customerName_deliver_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:text="@string/text_deliver_nums"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/txt_delivery_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_customerName_deliver_nums"
            android:singleLine="true"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/txt_delivery_box_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_delivery_box_nums"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:text="@string/text_deliver_box"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/txt_customerName_real_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/text_real_recive_nums"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/book_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txt_customerName_real_nums"
            android:src="@mipmap/reduce_disable" />

        <EditText
            android:id="@+id/book_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/book_reduce"
            android:layout_alignTop="@id/book_reduce"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/book_reduce"
            android:background="@mipmap/edittext_bg"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:maxWidth="40dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/book_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/book_count"
            android:layout_alignTop="@id/book_count"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/book_count"
            android:src="@mipmap/add_normal" />

        <TextView
            android:id="@+id/txt_real_box_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_real_box_nums"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:text="@string/text_real_recive_box"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_diff_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/page_bg_f2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_commonName_diff_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:text="@string/text_deliver_diff_nums"
            android:textColor="@color/text_grep"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/txt_diff_nums_product_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txt_commonName_diff_nums"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/text_grep"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/iv_fh_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_right" />

        <TextView
            android:id="@+id/txt_diff_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/iv_fh_date"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/text_diff_reason"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <View
        android:id="@+id/line_dotted_bottom"
        style="@style/line_dotted_style"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone" />

    <View
        android:id="@+id/line_solid_deep_bottom"
        style="@style/line_solid_deep_style"
        android:visibility="gone" />
</LinearLayout>
