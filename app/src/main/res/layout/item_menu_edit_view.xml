<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/layout_edit_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:background="@drawable/btn_white_f2">

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/txt_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="54dp"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_12"/>

    <cn.com.bluemoon.lib_widget.module.form.BmMarkView
        android:id="@+id/num_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        app:mark_show_mode="MODE_SHOW_APOSTROPHE"/>

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/menu_move_out"
        android:visibility="gone"/>
</FrameLayout>