<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_bg">

    <TextView
        android:id="@+id/tv_type"
        style="@style/txt_content_15"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="@string/clothes_check_history_type_back_order" />

    <View
        android:id="@+id/div1"
        style="@style/line_solid_style"
        android:layout_below="@+id/tv_type"
        android:layout_marginLeft="12dp" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/div1"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_right" />

    <TextView
        android:id="@+id/tv_box_tag_code"
        style="@style/txt_title_15"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/div1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/driver_tag_code"
        android:textSize="@dimen/text_size_17" />

    <TextView
        android:id="@+id/tv_abnormal"
        style="@style/txt_title_15"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@+id/div1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_box_tag_code"
        android:background="@drawable/border_red_shape4"
        android:gravity="center"
        android:text="@string/clothes_check_history_abnormal"
        android:textColor="@color/btn_red" />

    <View
        android:id="@+id/div2"
        style="@style/line_solid_style"
        android:layout_below="@+id/tv_box_tag_code"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_num"
        style="@style/txt_content_13"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/div2"
        android:layout_marginLeft="12dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/clothes_check_history_back_order_num" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/txt_content_13"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/tv_num"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/tv_num"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/tv_num"
        android:background="@color/page_bg_f2" />

</RelativeLayout>