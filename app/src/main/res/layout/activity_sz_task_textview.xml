<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_taskItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="44dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

        <!--android:layout_centerVertical="true"-->
    <TextView
        android:id="@+id/tv_leftName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/space_14"
        android:textColor="@color/task_item_left_text_color"
        android:text="评价人："
        />

    <TextView
        android:id="@+id/tv_rightContent"
        android:layout_toRightOf="@+id/tv_leftName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        android:layout_marginLeft="5dp"
        android:drawableRight="@mipmap/icon_right"
        android:textColor="@color/task_item_right_text_color"
        android:text="1234"
        android:ems="8"
        android:ellipsize="end"

        />
</RelativeLayout>




