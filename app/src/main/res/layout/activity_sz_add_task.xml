<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sz_gray_background"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollviwe_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/space_12"
                    android:src="@mipmap/icon_sz_task_date_big"
                    />

                <TextView
                    android:id="@+id/tv_dete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9月6号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    />
            </LinearLayout>


            <cn.com.bluemoon.delivery.sz.view.TaskTextView
                android:id="@+id/ttv_appraiser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rt_gravityStyle="right"
                app:rt_line_lenght="4"
                app:rt_max_lenght="50"
                app:text_left="评价人"
                app:text_right_hint="@string/sz_task_ttv_appraiser"
                app:text_right=""
                app:text_size_left="14sp"
                app:text_size_right="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/gray_deep"
                />

            <cn.com.bluemoon.delivery.sz.view.TaskTextView
                android:id="@+id/ttv_totalTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rt_gravityStyle="right"
                app:rt_line_lenght="3"
                app:rt_max_lenght="200"
                app:text_left="工作实际总用时"
                app:text_right=""
                app:text_size_left="14sp"
                app:text_size_right="14sp"
                app:hideArrow="gone"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/gray_deep"
                />

            <LinearLayout
                android:id="@+id/ll_task_item_conent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/space_12"
                android:orientation="vertical">


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/ll_addTask"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_background"
        android:orientation="vertical">

        <cn.com.bluemoon.lib.view.TextViewForClick
            android:id="@+id/tv_addTask"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/icon_sz_task_add"
            android:drawablePadding="@dimen/space_12"
            android:gravity="center"
            android:text="添加任务"
            android:textColor="@color/white"
            android:textSize="16sp"
            />


    </LinearLayout>
</LinearLayout>
