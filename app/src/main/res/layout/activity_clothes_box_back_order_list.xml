<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/page_bg_f2"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bar_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_code_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="@string/close_box_back_order_box_code"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/tv_back_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:gravity="right|center_vertical"
            android:text="@string/close_box_back_detail_order_num"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_back_order"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"
        android:background="@color/white"
        android:listSelector="@color/white"
        android:layout_weight="1"
        android:cacheColorHint="@color/transparent"
        android:divider="@drawable/div_left_padding_12"
        android:dividerHeight="0.5dp">
    </ListView>

    <Button
        android:id="@+id/btn_print"
        style="@style/btn_red4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/close_box_back_order_print"/>
</LinearLayout>