<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#fefefe"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_store"
                android:layout_width="@dimen/profile_head__width"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="@string/text_store"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/text_store_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_store"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>

        <View style="@style/line_solid_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/profile_head__width"
                android:layout_height="wrap_content"
                android:text="@string/text_store_receiver"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />


            <cn.com.bluemoon.lib.view.ClearEditText
                android:id="@+id/edit_receiver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/text_store_receiver_hint"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="@color/text_black_light"
                android:textColorHint="@color/text_grep"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <View style="@style/line_solid_style"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/profile_head__width"
                android:layout_height="wrap_content"
                android:text="@string/user_phone_hint"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <cn.com.bluemoon.lib.view.ClearEditText
                android:id="@+id/edit_user_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/user_phone_hint_hint"
                android:inputType="phone"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="@color/text_black_light"
                android:textColorHint="@color/text_grep"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <View style="@style/line_solid_style"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/profile_head__width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/text_store_address_is_lift"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <CheckBox
                android:id="@+id/cb_is_lift"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:button="@drawable/checkbox_swich_button" />

        </RelativeLayout>

        <View style="@style/line_solid_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/profile_head__width"
                android:layout_height="wrap_content"
                android:text="@string/text_store_address_floor"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />


            <cn.com.bluemoon.lib.view.ClearEditText
                android:id="@+id/edit_floor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/text_store_address_floor_hint"
                android:inputType="number"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="@color/text_black_light"
                android:textColorHint="@color/text_grep"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <View style="@style/line_solid_style"/>

        <RelativeLayout
            android:id="@+id/region_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_white">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="@dimen/profile_head__width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/text_store_address_area"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/text_title"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_region"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_grep"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </RelativeLayout>


        <View style="@style/line_solid_style"/>


        <RelativeLayout
            android:id="@+id/town_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_white"
            android:clickable="true">

            <TextView
                android:id="@+id/text_town_title"
                android:layout_width="@dimen/profile_head__width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/text_store_address_town"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/text_town_title"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_town"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:hint="@string/text_store_address_town_hint"
                    android:textColor="@color/text_black_light"
                    android:textColorHint="@color/text_grep"
                    android:textSize="@dimen/text_size_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="matrix"
                    android:src="@mipmap/icon_right" />
            </LinearLayout>
        </RelativeLayout>


        <View style="@style/line_solid_style"/>


        <RelativeLayout
            android:id="@+id/village_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_white"
            android:clickable="true">

            <TextView
                android:id="@+id/text_village_title"
                android:layout_width="@dimen/profile_head__width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/text_store_address_village"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/text_village_title"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_village"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:hint="@string/text_store_address_village_hint"
                    android:textColor="@color/text_black_light"
                    android:textColorHint="@color/text_grep"
                    android:textSize="@dimen/text_size_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="matrix"
                    android:src="@mipmap/icon_right" />
            </LinearLayout>
        </RelativeLayout>


        <View style="@style/line_solid_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/profile_head__width"
                android:layout_height="wrap_content"
                android:text="@string/text_store_address_detail"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />


            <cn.com.bluemoon.lib.view.ClearEditText
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/text_store_address_detail_hint"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="@color/text_black_light"
                android:textColorHint="@color/text_grep"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>


        <View style="@style/line_solid_style"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/profile_head__width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/text_store_address_default"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <CheckBox
                android:id="@+id/cb_default"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:button="@drawable/checkbox_swich_button" />

            <View
                android:id="@+id/v_disable_cb_default"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:background="#80ffffff"
                android:layout_alignLeft="@+id/cb_default"
                android:layout_alignRight="@+id/cb_default"/>

        </RelativeLayout>
        <View style="@style/line_solid_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_red_shape"
            android:text="@string/text_store_btn_save"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

</LinearLayout>