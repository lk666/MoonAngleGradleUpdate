<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_f2">

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/view_bg"
        android:textSize="@dimen/text_size_15"
        android:background="@drawable/btn_red_shape_large"
        android:text="@string/btn_save"
        />

    <ScrollView
        android:layout_above="@id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fefefe"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <View style="@style/line_solid_deep_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fefefe"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/team_member_detail_type"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/txt_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/text_black_light"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <View
                    style="@style/line_solid_style"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_white"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/team_member_detail_community"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="*"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/txt_community"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/text_grep"
                        android:gravity="right"
                        android:hint="@string/team_member_detail_community_hint"
                        android:textColor="@color/text_black_light"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:id="@+id/img_right1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_right" />
                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    style="@style/line_solid_style"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/team_member_detail_group"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="*"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/txt_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColorHint="@color/text_grep"
                        android:hint="@string/team_member_detail_group_hint"
                        android:textColor="@color/text_black_light"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:id="@+id/img_right2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_right" />
                </LinearLayout>

                <View style="@style/line_solid_deep_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fefefe"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/team_member_detail_style"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:text="*"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/txt_full"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:background="@drawable/btn_border_red_shape4"
                        android:textColor="@color/text_red"
                        android:text="@string/team_work_full"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/txt_part"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_border_grep_shape4"
                        android:textColor="@color/text_black_light"
                        android:gravity="center"
                        android:text="@string/team_work_part"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:id="@+id/line2"
                    style="@style/line_solid_style"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_work_lengh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/team_member_detail_lengh"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_15" />

                    <cn.com.bluemoon.lib.view.CommonClearEditText
                        android:id="@+id/txt_work_lengh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/text_grep"
                        android:hint="@string/team_work_part_hint"
                        android:textCursorDrawable="@null"
                        android:textColor="@color/text_black_light"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/line_solid_deep_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fefefe"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/team_group_start_date"
                        android:textColor="@color/text_black"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:paddingTop="10dp"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_size_15" />

                    <cn.com.bluemoon.delivery.ui.DateTextView
                        android:id="@+id/txt_startdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/text_grep"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="right"
                        android:hint="@string/team_group_date_hint"
                        android:textColor="@color/text_black_light"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_right" />

                </LinearLayout>

                <View
                    android:id="@+id/line4"
                    style="@style/line_solid_style"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/team_group_end_date"
                        android:padding="10dp"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_15" />

                    <cn.com.bluemoon.delivery.ui.DateTextView
                        android:id="@+id/txt_enddate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="right"
                        android:textColorHint="@color/text_grep"
                        android:hint="@string/team_group_date_hint"
                        android:textColor="@color/text_black_light"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_right" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/line_solid_deep_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="#fefefe"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/team_member_detail_content"
                    android:textColor="@color/text_black"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/text_size_15" />

                <cn.com.bluemoon.lib.view.CommonClearEditText
                    android:id="@+id/txt_remark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:textColorHint="@color/text_grep"
                    android:hint="@string/team_member_detail_content_hint"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/text_black_light"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>

            <View style="@style/line_solid_deep_style" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
