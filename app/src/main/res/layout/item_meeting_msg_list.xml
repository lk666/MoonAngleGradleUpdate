<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg_ed">

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12:00"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_corner_gray"
        android:layout_marginTop="17dp"
        android:padding="10dp"
        android:minWidth="86dp"/>


    <LinearLayout
        android:id="@+id/content_llt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="17dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/bg_corner_white">

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="这是标题"
            android:textColor="@color/sz_font_yellow"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/line1_miv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时间："
            style="@style/sz_txt"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/line2_miv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="任务描述："
            style="@style/sz_txt"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/line3_miv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="组织者："
            style="@style/sz_txt"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</LinearLayout>
