<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:smiv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_bg_ed">

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12:00"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_corner_gray"
        android:layout_marginTop="17dp"
        android:padding="10dp"
        android:minWidth="86dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="17dp"
        android:padding="5dp"
        android:background="@drawable/bg_corner_white">

        <TextView
            android:id="@+id/content_tv"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="这是标题"
            android:textColor="@color/sz_font_yellow"
            android:textSize="15sp"/>

        <cn.com.bluemoon.delivery.sz.view.MySettingItemView
            android:id="@+id/line1_miv"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="30dp"
            smiv:setMyHintTxt = "时间："
            smiv:setMyContentTxt = ""
            smiv:setMyContentColor="#888888"
            smiv:setMyHintColor="#888888"
            smiv:setMyRightVisible="false"/>

        <cn.com.bluemoon.delivery.sz.view.MySettingItemView
            android:id="@+id/line2_miv"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            smiv:setMyHintTxt = "任务描述："
            smiv:setMyContentTxt = ""
            smiv:setMyContentColor="#888888"
            smiv:setMyHintColor="#888888"
            smiv:setMyRightVisible="false"/>

        <cn.com.bluemoon.delivery.sz.view.MySettingItemView
            android:id="@+id/line3_miv"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            smiv:setMyHintTxt = "组织者："
            smiv:setMyContentTxt = ""
            smiv:setMyContentColor="#888888"
            smiv:setMyHintColor="#888888"
            smiv:setMyRightVisible="false"/>

    </LinearLayout>


</LinearLayout>
