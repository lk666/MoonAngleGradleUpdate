<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_f2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="80dp">

    <ImageView
        android:id="@+id/iv_code_bar"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_bluemoon_logo"/>

    <TextView
        android:id="@+id/tv_tag_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/close_box_tag_detail_code"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/close_box_tag_detail_address_title"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_15"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_15"/>

    <TextView
        android:id="@+id/tv_address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_15"/>

    <TextView
        android:id="@+id/tv_back_order_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/close_box_back_order_num"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_15"/>

    <TextView
        android:id="@+id/tv_box_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/close_box_tag_detail_box_code"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_15"/>
</LinearLayout>