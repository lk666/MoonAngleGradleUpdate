<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_f2"
    android:orientation="vertical">
 <TextView
     android:id="@+id/txt_code"
     android:layout_width="match_parent"
     android:layout_height="44dp"
     android:textColor="@color/text_black_light"
     android:gravity="center_vertical"
     android:layout_marginLeft="12dp"
     android:textSize="15sp"/>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="44dp"
     android:background="@color/white"
     android:gravity="center_vertical">
  <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textColor="@color/text_black"
      android:layout_marginLeft="12dp"
      android:text="@string/manage_refuse_time"
      android:textSize="15sp"/>
  <TextView
      android:id="@+id/txt_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/text_grep"
      android:layout_marginRight="12dp"
      android:textSize="13sp"/>

 </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="44dp"
     android:layout_marginTop="8dp"
     android:background="@color/white"
     android:gravity="center_vertical">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/text_black"
      android:layout_marginLeft="12dp"
      android:text="@string/manage_refuse_reason2"
      android:textSize="15sp"/>
  <include
      android:id="@+id/star"
      layout="@layout/red_star"/>
 </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@color/white"
     android:orientation="vertical">
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginLeft="12dp"
      android:background="@color/line_soild_bg"/>
  <TextView
      android:id="@+id/txt_reason"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="12dp"
      android:visibility="gone"
      android:textColor="@color/text_black_light"
      android:textSize="13sp"/>

  <cn.com.bluemoon.lib.view.CommonClearEditText
      android:id="@+id/et_reason"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:padding="12dp"
      android:drawablePadding="5dp"
      android:background="@null"
      android:gravity="left"
      android:visibility="gone"
      android:singleLine="true"
      android:textColor="@color/text_black_light"
      android:textColorHint="@color/text_grep"
      android:maxLength="100"
      android:textCursorDrawable="@null"
      android:hint="@string/manage_refuse_reason_hint"
      android:textSize="13sp"/>

 </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="44dp"
     android:gravity="center_vertical">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/text_black"
       android:layout_marginLeft="12dp"
       android:text="@string/manage_clothes_photo"
       android:textSize="15sp"/>
  <include
      android:id="@+id/star1"
      layout="@layout/red_star"/>
  <TextView
      android:id="@+id/txt_upload_hint"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/text_black_light"
      android:layout_marginLeft="10dp"
      android:text="@string/manage_upload_max"
      android:textSize="11sp"/>
 </LinearLayout>

 <include layout="@layout/layout_image_gridview"/>
 
 <Button
     android:id="@+id/btn_save"
     android:layout_width="100dp"
     android:layout_height="45dp"
     android:layout_marginTop="30dp"
     android:visibility="gone"
     android:layout_gravity="center_horizontal"
     android:text="@string/manage_refuse_btn"
     android:textColor="@color/white"
     android:textSize="17sp"
     android:background="@drawable/btn_red_shape4"/>

 </LinearLayout>