<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/btn_white"
    android:orientation="vertical"
     >
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="76dp"
         >

        <ImageView
            android:id="@+id/img_menu_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
             />

        <cn.com.bluemoon.lib.view.RedpointTextView
            android:id="@+id/txt_dispatch_count"
            android:layout_width="@dimen/point_width_large"
            android:layout_height="@dimen/point_height_large"
            android:background="@color/text_red"
            android:textColor="@color/view_bg"
            android:layout_marginLeft="72dp"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_15" />

</LinearLayout>