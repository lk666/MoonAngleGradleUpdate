<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/page_bg_f2"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_bg"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_collect_code"
                    style="@style/txt_title_13"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="@string/clothing_detail_collect_code"/>

                <TextView
                    android:id="@+id/tv_urgent"
                    style="@style/txt_title_13"
                    android:text="@string/with_order_collect_is_urgent"
                    android:textColor="@color/text_red"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_collect_brcode"
                style="@style/txt_title_13"
                android:layout_marginTop="8dp"
                android:text="@string/clothing_detail_brcode"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_op_name"
                    style="@style/txt_title_13"
                    android:layout_marginRight="10dp"
                    android:text="@string/clothing_detail_receiver_name"/>

                <TextView
                    android:id="@+id/tv_op_number"
                    style="@style/txt_title_13"
                    android:layout_width="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="@string/clothing_detail_receiver_name"/>

                <TextView
                    android:id="@+id/tv_op_phone"
                    style="@style/txt_title_13"
                    android:autoLink="phone"
                    android:text="@string/clothing_detail_receiver_name"
                    android:textColor="@color/btn_blue"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_collect_time"
                style="@style/txt_title_13"
                android:layout_marginTop="8dp"
                android:text="@string/clothing_detail_time"/>

            <TextView
                android:id="@+id/tv_collect_appoint_back_time"
                style="@style/txt_title_13"
                android:layout_marginTop="8dp"
                android:text="@string/clothing_detail_appoint_back_time"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white_bg"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_clotnes_code"
                    style="@style/txt_title_13"
                    android:layout_marginTop="8dp"
                    android:text="@string/clothing_detail_clothes_code"/>

                <TextView
                    android:id="@+id/tv_type_name"
                    style="@style/txt_title_13"
                    android:layout_marginTop="8dp"
                    android:text="@string/clothing_detail_brcode"/>

                <TextView
                    android:id="@+id/tv_flaw_dec"
                    style="@style/txt_title_13"
                    android:layout_marginTop="8dp"
                    android:text="@string/clothing_detail_flaw"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_stain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/ic_flaw"/>

                <ImageView
                    android:id="@+id/iv_flaw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/ic_stain"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_backup"
            style="@style/txt_title_13"
            android:layout_width="match_parent"
            android:background="@color/white_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/clothing_detail_backup"/>

        <TextView
            style="@style/txt_title_15"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="@string/clothing_detail_photo"
            android:textColor="@color/text_black_light"/>

        <cn.com.bluemoon.lib.view.ScrollGridView
            android:id="@+id/sgv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_bg"
            android:cacheColorHint="@color/transparent"
            android:clipToPadding="false"
            android:divider="@null"
            android:gravity="center"
            android:horizontalSpacing="16dp"
            android:numColumns="4"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"/>
    </LinearLayout>
</ScrollView>
