<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_bg">

    <ImageView
        android:id="@+id/iv_rignt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@mipmap/icon_right"/>

    <ImageView
        android:id="@+id/iv_cloth_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/iv_rignt"/>

    <TextView
        android:id="@+id/tv_clothes_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_cloth_img"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/iv_cloth_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_11"/>

    <TextView
        android:id="@+id/tv_type_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_cloth_img"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:singleLine="true"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_11"/>

    <TextView
        android:id="@+id/tv_clothes_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@+id/iv_cloth_img"
        android:layout_marginBottom="2dp"
        android:layout_toLeftOf="@+id/iv_cloth_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_11"/>
</RelativeLayout>