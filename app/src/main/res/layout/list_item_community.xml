<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white"
    android:clickable="true"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/layout_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="@dimen/linepaddingtxt4"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cb_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox5"/>
        <TextView
            android:id="@+id/txt_community"
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/text_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/linepaddingtxt4"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/ic_community"/>
        <TextView
            android:id="@+id/txt_community2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:lineSpacingExtra="8dp"
            android:padding="0dp"
            android:textSize="14sp"
            android:textColor="@color/text_black_light"/>
    </LinearLayout>
    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:background="@color/line_soild_bg" />
    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/line_solid_deep_bg" />

</LinearLayout>