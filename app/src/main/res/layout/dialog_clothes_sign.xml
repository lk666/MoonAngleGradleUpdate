<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="26dp"
              android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="30dp">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_clothes_sign"
            android:textColor="@color/text_black"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/txt_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:textSize="15sp"
            android:text="@string/manage_sign"
            android:layout_toRightOf="@id/txt_title"
            android:layout_centerVertical="true"
            android:textColor="@color/text_blue"/>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:checked="true"
            android:text="@string/manage_sign_by_self"/>
        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:layout_marginTop="26dp"
            android:text="@string/manage_sign_by_others"/>
    </RadioGroup>

</LinearLayout>