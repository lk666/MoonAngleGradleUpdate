<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/txt_transport_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_17"
        android:layout_marginLeft="12dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_right"
        android:scaleType="fitCenter"/>
    <View
        android:id="@+id/line1"
        style="@style/line_solid_light_style"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/txt_transport_code"/>

    <TextView
        android:id="@+id/txt_box_num"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/line1"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_15"
        android:layout_marginLeft="12dp"
        />
    <Button
        android:id="@+id/btn_load"
        android:layout_width="66dp"
        android:layout_height="30dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/line1"
        android:layout_alignParentRight="true"
        android:text="@string/driver_btn_load"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        android:background="@drawable/btn_red_shape4"
        />
    <View
        android:id="@+id/line2"
        style="@style/line_solid_light_style"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/txt_box_num"/>

    <TextView
        android:id="@+id/txt_load_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_13"
        />

    <View
        style="@style/line_solid_f2_style"
        android:layout_below="@id/txt_load_address"
        />

</RelativeLayout>