<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llayout_time_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/offline_training_item_bg"
        android:translationZ="2dp">

        <TextView
            android:id="@+id/txt_yt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="2017-04"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_15" />

        <RelativeLayout
            android:id="@+id/llayout_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/offline_head_icon_bg">

            <ImageView
                android:layout_width="24dp"
                android:src="@mipmap/offline_filter"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_yt"
            android:layout_below="@+id/txt_yt"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/llayout_icon"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offline_total_courses"
                android:textColor="@color/text_black_light"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/txt_total_courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_black_light"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/offline_total_duration"
                android:textColor="@color/text_black_light"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/txt_total_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_black_light"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>