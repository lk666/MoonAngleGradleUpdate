<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffffe"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:fadingEdge="none"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dip"
                android:src="@mipmap/addpic"
                android:visibility="visible" />

            <cn.com.bluemoon.lib.view.ScrollGridView
                android:id="@+id/gridview_ticket_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/white"
                android:layout_marginTop="10dp"
                android:numColumns="3"
                android:layout_margin="10dp"
                android:scrollbars="none"
                android:visibility="gone" />
            <!--    android:horizontalSpacing="5dip"
                android:verticalSpacing="5dip"-->

            <LinearLayout
                android:id="@+id/ll_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="3dp">

                <Button
                    android:id="@+id/btn_pic_ok"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/btn_blue_shape_large"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:singleLine="true"
                    android:text="@string/order_upload_ticket_pic_tip"
                    android:textColor="@color/text_grep"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="@string/order_upload_ticket_pic_tip1"
                    android:textColor="@color/text_grep"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="@string/order_upload_ticket_pic_tip2"
                    android:textColor="@color/text_grep"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
