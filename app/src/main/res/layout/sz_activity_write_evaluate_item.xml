            <!--android:gravity="center"-->
            <!--android:text="已暂停"-->
            <!--android:textColor="@color/red"-->
            <!--android:textSize="12sp" />-->
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_13"
        android:paddingRight="@dimen/space_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="进展状态"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/rg_task_complete_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/do_task_state_completed_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/sz_task_complete_state_bg_selector"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="已完成"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/do_task_state_completing_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/sz_task_complete_state_bg_selector"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="进行中"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />


                <RadioButton
                    android:id="@+id/do_task_pause_state_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/sz_task_complete_state_bg_selector"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="已暂停"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </RadioGroup>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="业绩有效"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/task_avalilabel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="有效"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/do_task_avalilabel_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/task_avalilabel_tv"
                android:checked="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/do_task_avalilabel_time_rl"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="有效工时"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/task_availabel_time_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/icon_right" />

            <TextView
                android:id="@+id/do_task_avalilabel_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/task_availabel_time_right_icon"
                android:gravity="center"
                android:text="120分钟"
                android:textColor="@color/gray"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/do_quality_evaluate_rl"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="质量评分"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/quality_evaluate_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/icon_right" />

            <TextView
                android:id="@+id/do_quality_evaluate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/quality_evaluate_right_icon"
                android:gravity="center"
                android:text="十分制"
                android:textColor="@color/gray"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/do_evaluate_content_rl"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="评价内容"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/evaluate_content_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/icon_right" />

            <TextView
                android:id="@+id/do_evaluate_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/evaluate_content_right_icon"
                android:gravity="center"
                android:text="请填写评价内容（选填）"
                android:textColor="@color/gray_deep"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
</LinearLayout>