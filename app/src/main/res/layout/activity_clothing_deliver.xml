<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_f2"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="1">

    <LinearLayout
        style="@style/row_style"
        android:orientation="horizontal"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clothing_deliver_code"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/required_filed"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View style="@style/line_solid_style"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <LinearLayout
        style="@style/row_style"
        >
        <EditText
            android:id="@+id/txt_user_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLength="8"
            android:singleLine="true"
            android:inputType="number"
            android:hint="@string/clothing_deliver_code_hint"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black"
            android:background="@null"
            />
        <Button
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:text="@string/clothing_btn_search"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_red_shape_large"
            android:textColor="@color/view_bg"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <View style="@style/line_solid_style" />

    <RelativeLayout
        style="@style/row_style"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clothing_deliver_name"
            android:singleLine="true"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张琳琳"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:layout_marginRight="16dp"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black_light"
            android:background="@null"
            />
    </RelativeLayout>

    <View style="@style/line_solid_style"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>


    <RelativeLayout
        style="@style/row_style"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clothing_deliver_phone"
            android:singleLine="true"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18620798515"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:layout_marginRight="16dp"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black_light"
            />
    </RelativeLayout>
    <View style="@style/line_solid_style"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <RelativeLayout
        style="@style/row_style"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clothing_book_in_backup"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black"
            />
        <EditText
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="@string/clothing_deliver_mark_hint"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_black"
            android:background="@null"
            />
    </RelativeLayout>
</LinearLayout>


    <cn.com.bluemoon.lib.pulltorefresh.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </cn.com.bluemoon.lib.pulltorefresh.PullToRefreshListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp">


        <Button
            android:id="@+id/btn_delete"
            style="@style/btn_red"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="@drawable/btn_border_red_large"
            android:text="@string/btn_cancel"
            android:textColor="@color/text_red" />

        <View
            android:id="@+id/v_div_btn"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/btn_red"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:text="@string/btn_ok" />

    </LinearLayout>

</LinearLayout>