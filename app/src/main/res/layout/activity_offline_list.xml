<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_f2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/llayout_headview"
        android:layout_marginTop="-6dp"
        android:layout_height="wrap_content">
        <cn.com.bluemoon.lib.pulltorefresh.PullToRefreshListView
            android:id="@+id/listview_offline"
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:overScrollMode="never"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrHeaderBackground="@color/page_bg_f2"
            ptr:ptrHeaderSubTextColor="@color/text_black"
            ptr:ptrHeaderTextColor="@color/text_black"
            ptr:ptrMode="both"/>
        <ViewStub
            android:id="@+id/viewstub_empty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <include
        android:layout_below="@+id/segment_tab"
        android:visibility="gone"
        android:id="@+id/llayout_headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/headview_offline_list"
        />

    <cn.com.bluemoon.delivery.ui.common.BmSegmentView
        android:id="@+id/segment_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <cn.com.bluemoon.delivery.ui.common.FloatButton
        android:id="@+id/btn_sign"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:drawableTop="@mipmap/ic_sign"
        android:text="@string/btn_sign"
        android:visibility="gone"/>

</RelativeLayout>