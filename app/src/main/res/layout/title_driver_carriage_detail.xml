<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/txt_transport_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_17"
        android:text="@string/driver_transport_code"
        />
    <View
        android:id="@+id/line"
        style="@style/line_solid_style"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/txt_transport_code"/>

    <TextView
        android:id="@+id/txt_box_num"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/line"
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_13"
        android:text="@string/driver_box_num"
        />

    <TextView
        android:id="@+id/txt_real_box_num"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/line"
        android:gravity="center"
        android:layout_marginLeft="125dp"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_13"
        android:text="@string/driver_real_box_num"
        />

</RelativeLayout>