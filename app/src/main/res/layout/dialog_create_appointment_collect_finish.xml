<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/circular_corner_dialog_no_border"
    android:orientation="vertical">

    <TextView
        style="@style/txt_title_15"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="24dp"
        android:text="@string/create_collect_dialog_collect_code"/>

    <TextView
        android:id="@+id/tv_collect_code"
        style="@style/txt_content_15"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"/>

    <TextView
        style="@style/txt_title_15"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:text="@string/outer_code_title"/>

    <TextView
        android:id="@+id/tv_outer_code"
        style="@style/txt_content_15"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"/>

    <TextView
        style="@style/txt_title_15"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:text="@string/create_collect_dialog_name_phone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/txt_content_15"/>

        <TextView
            android:id="@+id/tv_phone"
            style="@style/txt_content_15"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>

    <TextView
        style="@style/txt_title_15"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:text="@string/create_collect_dialog_address"/>


    <TextView
        android:id="@+id/tv_address"
        style="@style/txt_content_15"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/tv_actual_receive"
        style="@style/txt_title_15"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:text="@string/create_collect_dialog_actual_receive"/>

    <View
        style="@style/line_solid_style"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/btn_white_shape_bottom10"
        android:gravity="center"
        android:text="@string/btn_close_space"
        android:textColor="@color/btn_blue"
        android:textSize="@dimen/text_size_15"/>

</LinearLayout>