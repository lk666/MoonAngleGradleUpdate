<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/space_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/task_rank_num_tv"
            style="@style/sz_task_or_evaluate_detail_item_left"
            android:text="@string/sz_task_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/task_detail_content"
            style="@style/sz_task_or_evaluate_detail_item_right"
            android:maxLines="3"
            android:minLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/sz_task_or_evaluate_detail_item_left"
            android:text="@string/sz_task_output_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/task_output_tv"
            style="@style/sz_task_or_evaluate_detail_item_right"
            android:maxLines="3"
            android:minLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/sz_task_or_evaluate_detail_item_left"
            android:text="@string/sz_task_start_time_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/task_start_end_time_tv"
            style="@style/sz_task_or_evaluate_detail_item_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/sz_task_or_evaluate_detail_item_left"
            android:text="@string/sz_task_complete_state_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/task_complete_state_tv"
            style="@style/sz_task_or_evaluate_detail_item_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_task_availabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/sz_task_or_evaluate_detail_item_left"
            android:text="@string/sz_do_task_avaliabel_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/task_avalilabel_tv"
            style="@style/sz_task_or_evaluate_detail_item_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_task_quality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/sz_task_or_evaluate_detail_item_left"
            android:text="@string/sz_do_task_quality_score_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/task_quality_tv"
            style="@style/sz_task_or_evaluate_detail_item_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_task_evaluate_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/sz_task_or_evaluate_detail_item_left"
            android:text="@string/sz_do_task_evaluate_content_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/task_evaluate_tv"
            style="@style/sz_task_or_evaluate_detail_item_right" />
    </LinearLayout>

</LinearLayout>