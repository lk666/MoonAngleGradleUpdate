<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/layout_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:text="@string/login_name"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_12" />

        <cn.com.bluemoon.lib.view.ClearEditText
            android:id="@+id/ed_userid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_border_blue_white"
            android:digits="@string/key_limit_number_letter"
            android:ellipsize="start"
            android:hint="@string/login_name_hint"
            android:textCursorDrawable="@null"
            android:longClickable="false"
            android:padding="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_grep"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/login_phone"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_blue_white"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

            <cn.com.bluemoon.lib.view.ClearEditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:ellipsize="start"
                android:hint="@string/login_phone_hint"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:longClickable="false"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_grep"
                android:textSize="@dimen/text_size_15" />

            <View style="@style/line_solid_style"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <cn.com.bluemoon.lib.view.ClearEditText
                    android:id="@+id/ed_code"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ellipsize="start"
                    android:hint="@string/login_code_hint"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:longClickable="false"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_grep"
                    android:textSize="@dimen/text_size_15" />
                <Button
                    android:id="@+id/btn_code"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:minWidth="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_blue_shape"
                    android:textColor="@color/white"
                    android:text="@string/login_get_code"
                    android:textSize="@dimen/text_size_12" >
                </Button>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/login_new_psw"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_blue_white"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

            <cn.com.bluemoon.lib.view.ClearEditText
                android:id="@+id/ed_psw"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:ellipsize="start"
                android:hint="@string/login_new_psw_hint"
                android:inputType="textPassword"
                android:longClickable="false"
                android:textCursorDrawable="@null"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_grep"
                android:textSize="@dimen/text_size_15" />

            <View style="@style/line_solid_style"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <cn.com.bluemoon.lib.view.ClearEditText
                android:id="@+id/ed_con_psw"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:ellipsize="start"
                android:hint="@string/login_new_psw_hint2"
                android:inputType="textPassword"
                android:longClickable="false"
                android:textCursorDrawable="@null"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_grep"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_toast"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_red"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center_horizontal|bottom"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/btn_red_shape_circle"
            android:gravity="center"
            android:text="@string/login_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</RelativeLayout>