<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">


    <TextView
        android:id="@+id/txt_transport_code"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:paddingTop="15dp"
        android:text="@string/driver_transport_code"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_17" />

    <TextView
        android:id="@+id/txt_box_num"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/txt_transport_code"
        android:layout_marginLeft="12dp"
        android:text="@string/driver_box_num"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/txt_real_box_num"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/txt_transport_code"
        android:layout_toRightOf="@id/txt_box_num"
        android:layout_marginLeft="30dp"
        android:text="@string/driver_real_box_num"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_15" />

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_right" />

    <View
        android:id="@+id/line"
        style="@style/line_solid_light_style"
        android:layout_below="@id/txt_box_num"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/txt_carriage_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/line"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="@string/driver_carriage_time"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_13" />

    <View
        style="@style/line_solid_f2_style"
        android:layout_below="@id/txt_carriage_time" />

</RelativeLayout>