<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefe"
    android:clickable="true"
    >


        <TextView
            android:id="@+id/txt_transport_code"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/driver_transport_code"
            android:textColor="@color/text_black"
            android:paddingTop="15dp"
            android:layout_marginLeft="12dp"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/txt_box_num"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/txt_transport_code"
            android:text="@string/driver_box_num"
            android:layout_marginLeft="12dp"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/txt_real_box_num"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/txt_transport_code"
            android:layout_marginLeft="150dp"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/text_size_15"
            android:text="@string/driver_real_box_num"
             />

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_right"
        android:scaleType="centerInside"
        />

    <View
        android:id="@+id/line"
        style="@style/line_solid_light_style"
        android:layout_below="@id/txt_box_num"
        android:layout_marginLeft="12dp"
         />

    <TextView
        android:id="@+id/txt_carriage_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/line"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_size_13"
        android:text="@string/driver_carriage_time"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/page_bg_f2"
        android:layout_below="@id/txt_carriage_time"
        />

</RelativeLayout>