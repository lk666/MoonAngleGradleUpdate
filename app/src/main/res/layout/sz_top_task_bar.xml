<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_background">

    <cn.com.bluemoon.lib.view.ImageViewForClick
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:src="@drawable/icon_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">
        <RadioGroup
            android:id="@+id/rgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rb_left"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="任务记录"
                android:textSize="16sp"
                android:textColor="@color/title_background"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/selector_sz_task_header_bar"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />

            <RadioButton
                android:id="@+id/rb_right"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="任务评价"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:button="@null"
                android:background="@drawable/selector_sz_task_header_bar"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />

        </RadioGroup>


    </LinearLayout>




    <cn.com.bluemoon.lib.view.ImageViewForClick
        android:id="@+id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="center"
        android:visibility="gone"
        android:src="@mipmap/shezhi2" />

    <cn.com.bluemoon.lib.view.ImageViewForClick
        android:id="@+id/img_right2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/img_right"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="center"
        android:visibility="gone"
        android:src="@mipmap/xinxi2" />

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/img_right"
        android:visibility="gone"
        android:layout_centerVertical="true">
        <TextView
            android:gravity="center"
            android:id="@+id/num_tv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="20"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:background="@drawable/bg_circle_red_shape"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>



</RelativeLayout>