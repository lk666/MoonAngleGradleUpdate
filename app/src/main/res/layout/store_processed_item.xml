<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_white_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/txt_storehouse_id"
                android:layout_alignRight="@id/txt_storehouse_id"
                android:src="@mipmap/ico_my_warehouse"/>

            <TextView
                android:id="@+id/txt_storehouse_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/text_blue_light"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/txt_charge_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_size_12"
                android:layout_alignParentBottom="true"
                android:textColor="@color/text_black_light"
                />

            <TextView
                android:id="@+id/txt_storehouse_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/txt_charge_person"
                android:layout_above="@id/txt_charge_person"
                android:layout_marginBottom="17.5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/text_black"
                />
        </RelativeLayout>

    </LinearLayout>



  <View
      style="@style/line_dotted_style"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/txt_store_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="5dp"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_black_light"
                    />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/txt_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_black_light"
                    />

                <TextView
                    android:id="@+id/txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_grep"
                    android:drawablePadding="10dp"
                    android:text="@string/text_store_address_more"
                    android:drawableRight="@mipmap/icon_right" />
            </RelativeLayout>

            </LinearLayout>
    <View
        style="@style/line_solid_style_bold"
        ></View>
    </LinearLayout>