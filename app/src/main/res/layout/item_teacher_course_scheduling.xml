<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue_1fb8ff"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/text_blue_1fb8ff"
            android:textSize="@dimen/text_size_10"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_blue_1fb8ff"
            android:textSize="@dimen/text_size_9"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/top_line"
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:background="@color/line_e9"/>

        <cn.com.bluemoon.delivery.module.offline.view.WrapDot
            android:layout_width="11dp"
            android:layout_height="11dp"/>

        <View
            android:id="@+id/bottom_line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/line_e9"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_course_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_333"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lineSpacingExtra="6dp"
            android:maxLines="2"
            android:textColor="@color/txt_333"
            android:textSize="@dimen/text_size_14"/>

        <cn.com.bluemoon.lib_widget.module.form.BMPrefixTextView
            android:id="@+id/txt_teacher_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/txt_333"
            android:textSize="@dimen/text_size_14"
            app:prefix_null_data_is_show="true"
            app:prefix_text="@string/offline_type_lecturer"/>

        <cn.com.bluemoon.lib_widget.module.form.BMPrefixTextView
            android:id="@+id/txt_classroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/txt_333"
            android:textSize="@dimen/text_size_14"
            app:prefix_null_data_is_show="true"
            app:prefix_text="@string/offline_type_classroom"/>

    </LinearLayout>


</LinearLayout>