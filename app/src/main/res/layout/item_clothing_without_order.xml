<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
       style="@style/multi_row_style"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/layout_detail"
           style="@style/row_style_no_padding"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_activity_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_activity"
                android:drawablePadding="10dp"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_13"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_activity_desc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:drawablePadding="8dp"
                android:text="@string/clothing_without_order_activity_desc"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_13"
                android:drawableRight="@drawable/ic_right"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View style="@style/line_solid_padding_left_style"/>
        <LinearLayout
            style="@style/multi_row_no_padding_style"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_address"
                android:layout_gravity="top"/>
            <TextView
                android:id="@+id/txt_address_detail"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="0dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:background="@null"
                android:textColor="@color/text_black_light"
                android:textSize="@dimen/text_size_13"
                />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="66dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_red_shape_large"
                android:text="@string/with_order_collect_btn_start_collect"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13" />



        </LinearLayout>
    </LinearLayout>

</LinearLayout>