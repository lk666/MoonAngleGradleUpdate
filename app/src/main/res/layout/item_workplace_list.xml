<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_workplace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_white_bg"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   		android:paddingTop="10dp"
   		android:paddingBottom="10dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:button="@drawable/checkbox4" />

        <TextView
            android:id="@+id/txt_workplace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/text_black_light"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            android:src="@mipmap/icon_history_delete"
            />
    </LinearLayout>

    <View
        android:id="@+id/line_dotted"
    	android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"
    	android:background="@drawable/dotted_line"
    	android:layerType="software"/>
    <View
        android:id="@+id/line_silde"
        android:layout_width="match_parent"
    	android:layout_height="0.5dp"
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"
    	android:visibility="gone"
    	android:background="@color/line_soild_bg"/>

</LinearLayout>