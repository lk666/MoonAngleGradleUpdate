<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_f2"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_empty_order"
        android:layout_width="57dp"
        android:layout_height="68dp"
        android:layout_marginTop="135dp"
        android:src="@mipmap/no_internet_icon"
        android:scaleType="fitCenter"
         />

    <TextView
        android:id="@+id/txt_order_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/order_null_content"
        android:textColor="@color/text_set_hint"
        android:textSize="@dimen/text_size_large_14" />

    <Button
        android:id="@+id/btn_empty_order"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginTop="23dp"
        android:text="@string/order_refresh"
        android:background="@drawable/btn_border_grey"
        android:textColor="@color/text_set_hint"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>