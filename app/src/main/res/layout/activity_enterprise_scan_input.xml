<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:scan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_background"
    android:fitsSystemWindows="true">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <cn.com.bluemoon.lib.qrcode.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        scan:marginTop="150dp"
        scan:rectWidth="200dp"
        scan:rectHeight="200dp"
        scan:isHideContent="false"
        scan:content_text="@string/scan_qrcode_content"
        scan:content_color="@color/white"
        />
    <Button
        android:id="@+id/btn_input"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/icon_input"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/btn_blue_shape4"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_size_15"/>

</RelativeLayout>
