<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/view_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/row_style"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/with_order_collect_collect_number_text"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/txt_collect_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/with_order_collect_title_actual_count"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />


        <TextView
            android:id="@+id/txt_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>
    <View style="@style/line_solid_padding_left_style"/>
    <ListView
        android:id="@+id/listview_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/line_solid_divider"
        android:dividerHeight="0.5dp"
        >

    </ListView>
    <View style="@style/line_solid_padding_left_style"/>
    <LinearLayout
        style="@style/row_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_scan_code_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/with_order_collect_collect_code2"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/txt_scan_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/txt_urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/with_order_collect_is_urgent"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_size_13" />

    </LinearLayout>
</LinearLayout>
