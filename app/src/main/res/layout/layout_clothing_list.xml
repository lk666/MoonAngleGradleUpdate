<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/row_style"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/with_order_collect_collect_number_text"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/txt_collect_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/with_order_collect_title_actual_count"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />


        <TextView
            android:id="@+id/txt_actual"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <LinearLayout
        style="@style/row_style"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/with_order_collect_collect_code2"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/txt_scan_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10100001000000"
            android:gravity="left"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/txt_urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/with_order_collect_is_urgent"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_size_13" />

    </LinearLayout>
</LinearLayout>
