<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LinearLayoutForTabSelector">
        <attr name="left_text" format="string"/>
        <attr name="right_text" format="string"/>
    </declare-styleable>
    <declare-styleable name="TabSelector">
        <attr name="text" format="string"/>
        <attr name="color_select_text" format="color"/>
        <attr name="color_normal_text" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="margin_left" format="dimension"/>
        <attr name="margin_right" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="UpDownTextView">
        <attr name="tip_text" format="string"/>
        <attr name="is_up" format="boolean"/>
        <attr name="has_text" format="boolean"/>
        <attr name="utext_size" format="dimension"/>
        <attr name="utext_color" format="color"/>
        <attr name="ic_up" format="integer"/>
        <attr name="ic_down" format="integer"/>
    </declare-styleable>
    <declare-styleable name="SimpleWheelView">
        <attr name="unitHeight" format="dimension"/>
        <attr name="itemNumber" format="integer"/>

        <attr name="normalTextColor" format="color"/>
        <attr name="normalTextSize" format="dimension"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="selectedTextSize" format="dimension"/>

        <attr name="isEnable" format="boolean"/>
        <attr name="isLoop" format="boolean"/>

        <!--ExtraTextNumberWheelView专用，选中时显示的特定后缀-->
        <attr name="extra" format="string"/>
    </declare-styleable>

    <declare-styleable name="TopArcLayout">
        <!--圆弧形渐变区高度-->
        <attr name="strokeThiness" format="dimension"/>
        <!--圆弧形半径-->
        <attr name="radius" format="dimension"/>
        <!--圆弧形渐变区顶部颜色，即渐变结束色-->
        <attr name="endColor" format="color"/>
        <!--圆弧形渐变区底部颜色，即渐变开始色-->
        <attr name="startColor" format="color"/>
        <!--背景色-->
        <attr name="viewBg" format="color"/>
    </declare-styleable>

    <declare-styleable name="ArrowTextView">
        <attr name="arrowRadius" format="dimension"/>
        <attr name="arrowWidth" format="dimension"/>
        <attr name="arrowInWidth" format="dimension"/>
        <attr name="arrowBg" format="color"/>
    </declare-styleable>
    <declare-styleable name="MySetItemView">
        <attr name="setMyLeftDrawable" format="reference"/>
        <attr name="setMyHintColor" format="color"/>
        <attr name="setMyContentColor" format="color"/>
        <attr name="setMyContentTxt" format="string"/>
        <attr name="setMyHintTxt" format="string"/>
        <attr name="setMyRightVisible" format="boolean"/>
    </declare-styleable>

    <!--sz tasttextview-->
    <declare-styleable name="TaskTextView">
        <attr name="rt_line_lenght" format="integer"/>
        <attr name="rt_max_lenght" format="integer"/>
        <attr name="text_size_left" format="dimension"/>
        <attr name="text_size_right" format="dimension"/>
        <attr name="tv_height" format="dimension"/>
        <attr name="text_right" format="string"/>
        <attr name="text_left" format="string"/>
        <attr name="text_right_hint" format="string"/>
        <attr name="text_left_hint" format="string"/>
        <attr name="rt_gravityStyle" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="hideArrow" format="enum">
            <enum name="gone" value="0"/>
            <enum name="visible" value="1"/>
        </attr>
    </declare-styleable>

    <!--圆形imageview-->
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension"/>
        <attr name="border_inside_color" format="color"/>
        <attr name="border_outside_color" format="color"/>
        <attr name="is_draw_border" format="boolean"/>
    </declare-styleable>

    <!--通用组件 start-->

    <!--通用组件：列表底部-->
    <declare-styleable name="BMListPaginationView">
        <attr name="pag_text" format="string|reference"/>
        <attr name="pag_text_color" format="color"/>
        <attr name="pag_line_color" format="color"/>
        <attr name="pag_line_size" format="dimension"/>
    </declare-styleable>

    <!--通用组件：多行输入框-->
    <declare-styleable name="BMFieldParagraphView">
        <attr name="field_title" format="string|reference"/>
        <attr name="field_title_color" format="color"/>
        <attr name="field_title_size" format="dimension"/>
        <attr name="field_count_color" format="color"/>
        <attr name="field_count_size" format="dimension"/>
        <attr name="field_hint" format="string|reference"/>
        <attr name="field_hint_color" format="color"/>
        <attr name="field_content" format="string|reference"/>
        <attr name="field_content_color" format="color"/>
        <attr name="field_content_size" format="dimension"/>
        <attr name="field_line_color" format="color"/>
        <attr name="field_line_padding_left" format="dimension"/>
        <attr name="field_line_padding_right" format="dimension"/>
        <attr name="field_content_maxLength" format="integer"/>
        <attr name="field_count_visible" format="enum">
            <enum name="gone" value="0x00000008"/>
            <enum name="visible" value="0x00000000"/>
        </attr>
    </declare-styleable>

    <!--通用控件：横向输入框-->
    <declare-styleable name="BMFieldText1View">
        <attr name="field_text1_title" format="string|reference"/>
        <attr name="field_text1_title_color" format="color"/>
        <attr name="field_text1_title_size" format="dimension"/>
        <attr name="field_text1_hint" format="string|reference"/>
        <attr name="field_text1_hint_color" format="color"/>
        <attr name="field_text1_content" format="string|reference"/>
        <attr name="field_text1_content_color" format="color"/>
        <attr name="field_text1_content_size" format="dimension"/>
        <attr name="field_text1_line_color" format="color"/>
        <attr name="field_text1_line_padding_left" format="dimension"/>
        <attr name="field_text1_line_padding_right" format="dimension"/>
        <attr name="field_text1_content_maxLength" format="integer"/>
    </declare-styleable>

    <!--通用组件：单行选择-->
    <declare-styleable name="BMFieldArrow1View">
        <attr name="field_arrow_title" format="string|reference"/>
        <attr name="field_arrow_title_color" format="color"/>
        <attr name="field_arrow_title_size" format="dimension"/>
        <attr name="field_arrow_hint" format="string|reference"/>
        <attr name="field_arrow_hint_color" format="color"/>
        <attr name="field_arrow_content" format="string|reference"/>
        <attr name="field_arrow_content_color" format="color"/>
        <attr name="field_arrow_content_size" format="dimension"/>
        <attr name="field_arrow_line_color" format="color"/>
        <attr name="field_arrow_line_padding_left" format="dimension"/>
        <attr name="field_arrow_line_padding_right" format="dimension"/>
        //设置右图标
        <attr name="field_arrow_img" format="reference"/>
        //设置右图标是否可点击
        <attr name="field_arrow_img_clickable" format="boolean"/>
    </declare-styleable>

    <!--通用组件：单选item-->
    <declare-styleable name="BMRadioItemView">
        <attr name="radio_item_drawable_normal" format="reference"/>
        <attr name="radio_item_drawable_select" format="reference"/>
        <attr name="radio_item_drawable_disable" format="reference"/>
        <attr name="radio_item_text" format="string|reference"/>
        <attr name="radio_item_text_color_normal" format="color"/>
        <attr name="radio_item_text_color_select" format="color"/>
        <attr name="radio_item_text_color_disable" format="color"/>
        <attr name="radio_item_text_size" format="dimension"/>
        <attr name="radio_item_line_color" format="color"/>
        <attr name="radio_item_line_size" format="dimension"/>
        <attr name="radio_item_line_padding_left" format="dimension"/>
        <attr name="radio_item_line_padding_right" format="dimension"/>
        <attr name="radio_item_line_visible" format="enum">
            <enum name="gone" value="0x00000008"/>
            <enum name="visible" value="0x00000000"/>
        </attr>
    </declare-styleable>

    <!--通用组件：单选列表-->
    <declare-styleable name="BMRadioListView">
        <attr name="radio_list_item_layout" format="reference"/>
    </declare-styleable>

    <declare-styleable name="BmCellTextView">
        <attr name="cell_text_txt_title" format="string|reference" />
        <attr name="cell_text_title_size" format="dimension" />
        <attr name="cell_text_title_color" format="color" />
        <attr name="cell_text_txt_content" format="string|reference" />
        <attr name="cell_text_content_size" format="dimension" />
        <attr name="cell_text_content_color" format="color" />
        <attr name="cell_text_min_height" format="dimension" />
        <attr name="cell_text_line_color" format="color" />
        <attr name="cell_text_line_height" format="dimension" />
        <attr name="cell_text_line_paddingleft" format="dimension" />
        <attr name="cell_text_line_paddingright" format="dimension" />
        <attr name="cell_text_line_isshow" format="boolean" />
        <attr name="cell_text_paddingleft" format="dimension" />
        <attr name="cell_text_paddingright" format="dimension" />
        <attr name="cell_text_content_isBold" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BmCellParagraphView">
        <attr name="cell_paragraph_txt_title" format="string|reference" />
        <attr name="cell_paragraph_title_size" format="dimension" />
        <attr name="cell_paragraph_title_color" format="color" />
        <attr name="cell_paragraph_txt_content" format="string|reference" />
        <attr name="cell_paragraph_content_size" format="dimension" />
        <attr name="cell_paragraph_content_color" format="color" />
        <attr name="cell_paragraph_line_color" format="color" />
        <attr name="cell_paragraph_line_height" format="dimension" />
        <attr name="cell_paragraph_line_paddingleft" format="dimension" />
        <attr name="cell_paragraph_line_paddingright" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BmMarkView">
        <attr name="txt_number" format="integer" />
        <attr name="color_bg" format="color" />
        <attr name="mark_height" format="dimension" />
        <attr name="mark_show_mode">
            <enum name="MODE_SHOW_APOSTROPHE" value="0"/>
            <enum name="MODE_SHOW_PLUS_SIGN" value="1"/>
        </attr>
    </declare-styleable>

    <!--通用组件：btn-->
    <declare-styleable name="BMAngleBtn1View">
        <attr name="btn_color_normal" format="color"/>
        <attr name="btn_color_pressed" format="color"/>
        <attr name="btn_color_disable" format="color"/>

        <attr name="btn_text" format="string|reference"/>
        <attr name="btn_text_color" format="color"/>
        <attr name="btn_text_size" format="dimension"/>

        <attr name="btn_height" format="dimension"/>

        <attr name="btn_translationZ" format="dimension"/>

        <attr name="btn_radius" format="dimension"/>

        <attr name="btn_paddingLeft" format="dimension"/>
        <attr name="btn_paddingRight" format="dimension"/>
        <attr name="btn_paddingBottom" format="dimension"/>
        <attr name="btn_paddingTop" format="dimension"/>

        <attr name="btn_marginLeft" format="dimension"/>
        <attr name="btn_marginRight" format="dimension"/>
        <attr name="btn_marginBottom" format="dimension"/>
        <attr name="btn_marginTop" format="dimension"/>
        <attr name="btn_enable" format="boolean"/>

        <attr name="btn_type" format="enum">
            <enum name="red" value="0"/>
            <enum name="blue" value="1"/>
        </attr>
    </declare-styleable>



    <declare-styleable name="BmSegmentView">
        <attr name="segmentview_height" format="dimension"/>
        <attr name="segmentview_width" format="dimension"/>
        <attr name="segmentview_colorBg" format="color"/>
        <attr name="segmentview_translationZ" format="dimension"/>
        <attr name="segmentview_showMode">
            <enum name="MODE_FIXED_WIDTH" value="0"/>
            <enum name="MODE_DIVIDE" value="1"/>
            <enum name="MODE_ADAPTIVE" value="2"/>
        </attr>
        <attr name="segmentview_lineWidth" format="dimension"/>
        <attr name="segmentview_lineHeight" format="dimension"/>
        <attr name="segmentview_textSizeCheck" format="dimension"/>
        <attr name="segmentview_textSizeUnCheck" format="dimension"/>
        <attr name="segmentview_textColorCheck" format="color"/>
        <attr name="segmentview_textColorUnCheck" format="color"/>
        <attr name="segmentview_lineBottomMargin" format="dimension"/>
        <attr name="segmentview_markTopMargin" format="dimension"/>
        <attr name="segmentview_paddingLeft" format="dimension"/>
        <attr name="segmentview_paddingRight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BmRankStar1">
        <attr name="rank_star1_titleSize" format="dimension" />
        <attr name="rank_star1_titleColor" format="color" />
        <attr name="rank_star1_titleText" format="string|reference" />
        <attr name="rank_star1_progressDrawable" format="reference" />
        <attr name="rank_star1_backgroundDrawable" format="reference" />
        <attr name="rank_star1_rating" format="float" />
    </declare-styleable>

    <declare-styleable name="BmRankStar2">
        <attr name="rank_star2_titleSize" format="dimension" />
        <attr name="rank_star2_titleColor" format="color" />
        <attr name="rank_star2_titleText" format="string|reference" />
        <attr name="rank_star2_progressDrawable" format="reference" />
        <attr name="rank_star2_backgroundDrawable" format="reference" />
        <attr name="rank_star2_rating" format="integer" />
        <attr name="rank_star2_height" format="dimension" />
    </declare-styleable>
    <!--通用组件 end-->

</resources>