<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">

    </style>

    <style name="TranslucentTheme" parent="App.Base.Theme">
        - <!-- 在Android 4.4之前的版本上运行，直接跟随系统主题
  -->

    </style>


    <style name="edittext_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/text_black_light</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17sp</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:ellipsize">start</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- 浅色实线 -->
    <style name="line_solid_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_soild_bg</item>
    </style>

    <!-- 浅色实线 -->
    <style name="line_solid_padding_left_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:background">@color/line_soild_bg</item>
    </style>

    <!-- 浅色实线 -->
    <style name="line_solid_padding_right_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">@color/line_soild_bg</item>
    </style>

    <!-- 浅色实线 -->
    <style name="line_solid_padding_both_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">@color/line_soild_bg</item>
    </style>


    <style name="line_solid_style_bold">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_soild_bg</item>
    </style>
    <!-- 深色实线 -->
    <style name="line_solid_deep_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_solid_deep_bg</item>
    </style>
    <!-- 虚线 -->
    <style name="line_dotted_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/dotted_line</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="row_style_no_padding">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="row_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="multi_row_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="multi_row_no_padding_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="btn_red">
        <item name="android:layout_width">219dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/btn_red_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="btn_red4" parent="btn_red">
        <item name="android:background">@drawable/btn_red_shape4</item>
        <item name="android:textColor">@color/white_bg</item>
    </style>

    <style name="btn_red_large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/btn_red_shape_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="account_set_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/text_grep</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="account_set_relative_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/list_item_white_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="account_set_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="account_set_img_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">matrix</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/icon_right</item>
    </style>

    <style name="back_btn_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/btn_black_blue</item>
        <item name="android:padding">13dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">btn_back</item>
        <item name="android:src">@drawable/icon_back</item>
    </style>

    <!-- app base theme -->
    <style name="App.Base.Theme" parent="android:Theme.Holo">
        <item name="android:actionBarSize">50dip</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AnimTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>
    <!-- ####################以上内容全部来自搬运 ############################################ -->

    <style name="AnimFade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AnimStartStyle" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/AnimFade</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Anim_style2" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimFade</item>

    </style>

    <style name="MoonWithACtionBar" parent="android:Theme.Light">
        <item name="android:actionBarSize">50dip</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="Anim_style3" parent="android:Theme.Holo">
        <item name="android:windowAnimationStyle">@style/AnimFade</item>
        <item name="android:actionBarSize">50dip</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--灰色13提示字体-->
    <style name="txt_hint_13">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_grep</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <!--黑色13正文字体-->
    <style name="txt_content_13">
        <item name="android:textColorHint">@color/text_grep</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black_light</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <!--黑色11正文字体-->
    <style name="txt_content_11" parent="txt_content_13">
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <!--黑色15正文字体-->
    <style name="txt_content_15" parent="txt_content_13">
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <!--输入框黑色15正文字体-->
    <style name="txt_input_content_15" parent="txt_content_15">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColorHint">@color/text_grep</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--输入框黑色13正文字体-->
    <style name="txt_input_content_13" parent="txt_content_13">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColorHint">@color/text_grep</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--普通黑色13标题字体-->
    <style name="txt_title_13">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <!--普通黑色15标题字体-->
    <style name="txt_title_15" parent="txt_title_13">
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <!--普通黑色11标题字体-->
    <style name="txt_title_11" parent="txt_title_13">
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="MyDialogStyleTop" parent="android:Theme.Dialog" >
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/black_transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

</resources>
