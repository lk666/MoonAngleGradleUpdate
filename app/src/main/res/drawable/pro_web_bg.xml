<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
         <!--  设置背景色图像资源  -->
         <item android:id="@android:id/background">  
        <shape>  
            <corners android:radius="2.0dip" />  
            <gradient android:startColor="#00000000" android:centerColor="#00000000" android:endColor="#00000000" android:angle="270.0" android:centerY="2.0"  />  
        </shape>  
    </item>  
    
         <!--  设置第一级进度条颜色图像资源  -->
        <item android:id="@android:id/progress">  
        <clip>  
            <shape>  
                <corners android:radius="2.0dip" />  
                <gradient android:startColor="#ff00EE00" android:centerColor="#ff00EE00" android:endColor="#ff00EE00" android:angle="270.0" android:centerY="2.0"  />  
            </shape>  
        </clip>  
    </item>  
</layer-list> 